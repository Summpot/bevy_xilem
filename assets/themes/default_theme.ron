(
  rules: [
    // ---- Global defaults ----
    (
      selector: Type("UiRoot"),
      setter: (
        colors: (
          bg: Hex("#0D121E"),
        ),
      ),
    ),
    (
      selector: Type("UiFlexColumn"),
      setter: (
        layout: (
          gap: 8.0,
        ),
      ),
    ),
    (
      selector: Type("UiFlexRow"),
      setter: (
        layout: (
          gap: 8.0,
        ),
      ),
    ),

    // ---- Primitive controls ----
    (
      selector: Type("UiLabel"),
      setter: (
        colors: (
          text: Hex("#E2E8F0"),
        ),
        text: (
          size: 15.0,
        ),
      ),
    ),
    (
      selector: Type("UiButton"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 8.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Hex("#25334F"),
          hover_bg: Hex("#2E3E5F"),
          pressed_bg: Hex("#1D2B44"),
          border: Hex("#4F6695"),
          text: Hex("#DFE9FF"),
        ),
        transition: (
          duration: 0.12,
        ),
      ),
    ),
    (
      selector: Type("UiCheckbox"),
      setter: (
        layout: (
          padding: 6.0,
          corner_radius: 6.0,
          border_width: 1.0,
          gap: 8.0,
        ),
        colors: (
          bg: Hex("#1A2338"),
          hover_bg: Hex("#22304C"),
          pressed_bg: Hex("#162136"),
          border: Hex("#445B8A"),
          text: Hex("#DCE7FF"),
        ),
        transition: (
          duration: 0.12,
        ),
      ),
    ),
    (
      selector: Type("UiSlider"),
      setter: (
        layout: (
          padding: 6.0,
          corner_radius: 6.0,
          border_width: 1.0,
          gap: 8.0,
        ),
        colors: (
          bg: Hex("#161F33"),
          border: Hex("#41557F"),
          text: Hex("#DCE7FF"),
        ),
      ),
    ),
    (
      selector: Type("UiSwitch"),
      setter: (
        layout: (
          padding: 6.0,
          corner_radius: 999.0,
          border_width: 1.0,
          gap: 8.0,
        ),
        colors: (
          bg: Hex("#21314D"),
          hover_bg: Hex("#2A3D5F"),
          pressed_bg: Hex("#1A2940"),
          border: Hex("#4D6798"),
          text: Hex("#E3ECFF"),
        ),
        transition: (
          duration: 0.12,
        ),
      ),
    ),
    (
      selector: Type("UiTextInput"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 8.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Hex("#131C2E"),
          border: Hex("#41557F"),
          text: Hex("#E6EEFF"),
        ),
      ),
    ),

    // ---- Dialog / overlay surfaces ----
    (
      selector: Class("overlay.modal.dimmer"),
      setter: (
        colors: (
          bg: Rgba8(0, 0, 0, 160),
        ),
      ),
    ),
    (
      selector: Type("UiDialog"),
      setter: (
        layout: (
          padding: 18.0,
          gap: 10.0,
          corner_radius: 12.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Hex("#181E2D"),
          border: Hex("#3A4868"),
        ),
        box_shadow: (
          color: Rgba8(0, 0, 0, 92),
          offset_y: 10.0,
          blur: 22.0,
        ),
      ),
    ),
    (
      selector: Class("overlay.dialog.title"),
      setter: (
        text: (
          size: 24.0,
        ),
        colors: (
          text: Hex("#F1F5FF"),
        ),
      ),
    ),
    (
      selector: Class("overlay.dialog.body"),
      setter: (
        text: (
          size: 16.0,
        ),
        colors: (
          text: Hex("#C6D2EE"),
        ),
      ),
    ),
    (
      selector: Class("overlay.dialog.dismiss"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 8.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Hex("#273652"),
          hover_bg: Hex("#31466B"),
          pressed_bg: Hex("#1E2D47"),
          border: Hex("#4E6697"),
          text: Hex("#E3ECFF"),
        ),
        text: (
          size: 15.0,
        ),
      ),
    ),

    // ---- Combo / dropdown ----
    (
      selector: Class("overlay.dropdown.menu"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 10.0,
          border_width: 1.0,
          gap: 6.0,
        ),
        colors: (
          bg: Hex("#161C2A"),
          border: Hex("#384664"),
        ),
        box_shadow: (
          color: Rgba8(0, 0, 0, 71),
          offset_y: 8.0,
          blur: 16.0,
        ),
      ),
    ),
    (
      selector: Class("overlay.dropdown.item"),
      setter: (
        layout: (
          padding: 6.0,
          corner_radius: 6.0,
        ),
        text: (
          size: 15.0,
        ),
        colors: (
          text: Hex("#DCE7FF"),
          hover_bg: Hex("#22314E"),
          pressed_bg: Hex("#1A2940"),
        ),
      ),
    ),

    // ---- Menu panel ----
    (
      selector: Class("overlay.menu.panel"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 8.0,
          border_width: 1.0,
          gap: 4.0,
        ),
        colors: (
          bg: Hex("#161C2A"),
          border: Hex("#384664"),
        ),
      ),
    ),
    (
      selector: Class("overlay.menu.item"),
      setter: (
        layout: (
          padding: 6.0,
        ),
      ),
    ),

    // ---- Tooltip ----
    (
      selector: Class("overlay.tooltip"),
      setter: (
        layout: (
          padding: 6.0,
          corner_radius: 4.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Hex("#0F172A"),
          border: Hex("#24314A"),
          text: Hex("#E2E8F0"),
        ),
      ),
    ),

    // ---- Color picker ----
    (
      selector: Class("overlay.color_picker.panel"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 8.0,
          border_width: 1.0,
          gap: 6.0,
        ),
        colors: (
          bg: Hex("#161C2A"),
          border: Hex("#384664"),
        ),
      ),
    ),
    (
      selector: Class("overlay.color_picker.swatch"),
      setter: (
        layout: (
          corner_radius: 3.0,
          border_width: 1.0,
        ),
        colors: (
          border: Rgba8(255, 255, 255, 80),
        ),
      ),
    ),
    (
      selector: Class("overlay.color_picker.value"),
      setter: (
        colors: (
          text: Hex("#DCE7FF"),
        ),
      ),
    ),

    // ---- Date picker ----
    (
      selector: Class("overlay.date_picker.panel"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 8.0,
          border_width: 1.0,
          gap: 4.0,
        ),
        colors: (
          bg: Hex("#161C2A"),
          border: Hex("#384664"),
        ),
      ),
    ),
    (
      selector: Class("overlay.date_picker.cell"),
      setter: (
        layout: (
          padding: 4.0,
          corner_radius: 4.0,
        ),
        colors: (
          text: Hex("#DCE7FF"),
        ),
      ),
    ),
    (
      selector: Class("overlay.date_picker.nav"),
      setter: (
        colors: (
          text: Hex("#EAF1FF"),
        ),
      ),
    ),

    // ---- Extended built-ins ----
    (
      selector: Class("widget.radio.item"),
      setter: (
        layout: (
          padding: 4.0,
        ),
      ),
    ),
    (
      selector: Class("widget.tab.header"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 6.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Hex("#1B263D"),
          border: Hex("#41557F"),
          text: Hex("#DCE7FF"),
        ),
      ),
    ),
    (
      selector: Class("widget.tab.active"),
      setter: (
        layout: (
          padding: 8.0,
          corner_radius: 6.0,
          border_width: 2.0,
        ),
        colors: (
          bg: Hex("#243655"),
          border: Hex("#60A5FA"),
          text: Hex("#EFF5FF"),
        ),
      ),
    ),
    (
      selector: Class("widget.table.header"),
      setter: (
        layout: (
          padding: 6.0,
          border_width: 1.0,
        ),
        colors: (
          bg: Rgba8(255, 255, 255, 30),
          border: Rgba8(255, 255, 255, 45),
        ),
      ),
    ),
    (
      selector: Class("widget.table.cell"),
      setter: (
        layout: (
          padding: 4.0,
        ),
      ),
    ),
    (
      selector: Class("widget.group_box.title"),
      setter: (
        text: (
          size: 15.0,
        ),
        colors: (
          text: Hex("#E7EEFF"),
        ),
      ),
    ),

    // ---- Template parts ----
    (
      selector: Class("template.checkbox.indicator"),
      setter: (
        colors: (
          text: Hex("#7CC2FF"),
        ),
      ),
    ),
    (
      selector: Class("template.slider.track"),
      setter: (
        colors: (
          text: Hex("#BFD4FF"),
        ),
      ),
    ),
    (
      selector: Class("template.slider.thumb"),
      setter: (
        colors: (
          text: Hex("#60A5FA"),
        ),
      ),
    ),
    (
      selector: Class("template.switch.thumb"),
      setter: (
        colors: (
          text: Hex("#60A5FA"),
        ),
      ),
    ),
  ],
)
